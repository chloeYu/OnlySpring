<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="commentsns">
	<resultMap type="comments" id="commentsResult">
		<id property="cid" column="cid" />
		<result property="userid" column="userid" />
		<result property="pid" column="pid" />
		<result property="text" column="text" />
		<result property="created" column="created" />
		<result property="modified" column="modified" />
				<result property="del" column="del" />
	</resultMap>
	
	<insert id="insert" useGeneratedKeys="true" keyProperty="cid">
		insert into Comments (ref_id, userid, text, created, modified, del)
  		values (#{ref_id}, #{userid}, #{text}, now(), now(), 'n')
	</insert>
	
	<select id="list" parameterType="int" resultMap="commentsResult">
		select * from comments where ref_id=#{ref_id} order by cid desc
	</select>
</mapper>
